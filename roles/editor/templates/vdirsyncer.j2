[general]
status_path = "~/.local/share/vdirsyncer/status/"
[pair contacts]
a = "contacts_local"
b = "contacts_remote"
collections = ["from a", "from b"]
metadata = ["displayname"]
conflict_resolution = "b wins"
[storage contacts_local]
type = "filesystem"
path = "~/.local/share/vdirsyncer/contacts"
fileext = ".vcf"
[storage contacts_remote]
type = "carddav"
url = "https://posteo.de:8443/"
username = "{{ dav_user }}"
password.fetch = ["command", "bw", "get", "password", "b4f351e2-d1d1-48e2-9d90-b0c10184948c"]
[pair calendar]
a = "calendar_local"
b = "calendar_remote"
collections = ["from a", "from b"]
metadata = ["displayname", "color"]
conflict_resolution = "b wins"
[storage calendar_local]
type = "filesystem"
path = "~/.local/share/vdirsyncer/calendars"
fileext = ".ics"
[storage calendar_remote]
type = "caldav"
url = "https://posteo.de:8443/"
username = "{{ dav_user }}"
password.fetch = ["command", "bw", "get", "password", "b4f351e2-d1d1-48e2-9d90-b0c10184948c"]
[pair holidays]
a = "holidays_local"
b = "holidays_remote"
collections = null
[storage holidays_local]
type = "filesystem"
path = "~/.local/share/vdirsyncer/calendars-ro/holidays"
fileext = ".ics"
[storage holidays_remote]
type = "http"
url = "https://p24-calendars.icloud.com/holidays/us_en.ics"
